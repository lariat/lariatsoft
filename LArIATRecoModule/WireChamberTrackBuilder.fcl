#include "services_lariat.fcl"
#include "lariat_reco_algs.fcl"

process_name: WireChamberTrackBuilder

services:
{
  TFileService: { fileName: "WireChamberTrackBuilder_histo.root" }
  message:      @local::standard_info
}

source:
{
  module_type: RootInput
  maxEvents:   -1 
  # fileNames: ["input.root"]
}

outputs: {}

physics:
{
  producers:
  {
    WireChamberTrackBuilder:
    {
      module_type:         WireChamberTrackBuilder
      WCTrackBuilderAlg:   @local::lariat_wctrackbuilderalg
    }
  }
  analysis:  [ WireChamberTrackBuilder ]
  end_paths: [ analysis ]
}

physics.producers.WireChamberTrackBuilder.TriggerUtility: "FragmentToDigit"
