#physics.analyzers.SlicerCheck.SlicerAlg.ClockCorrectionAlg.StopProbability:              1
#physics.analyzers.SlicerCheck.SlicerAlg.ClockCorrectionAlg.TimeStampDifferenceThreshold: 1e5  # microseconds
#physics.analyzers.SlicerCheck.SlicerAlg.ClockCorrectionAlg.SampleSlopeCutLower:          0.9
