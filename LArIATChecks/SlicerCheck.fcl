#include "services_lariat.fcl"
#include "clockcorrectionalg.fcl"
#include "sliceralg.fcl"

process_name: SlicerCheck

services:
{
  TFileService: { fileName: "SlicerCheck.root" }
  Timing:       {}
  RandomNumberGenerator: {} 
  message:      @local::standard_info
  user:         @local::lariat_services
}

source:
{
  module_type: RootInput

  # Number of events to analyze; "-1" means all of the events in the input
  # file. You can override this value with the "-n" option on the command line. 
  maxEvents:  -1 
}

# This is empty, because we're not writing any art::Events to an output file. 
outputs: {}

physics:
{
  analyzers:
  {
    SlicerCheck:
    {
      # The "module_type" tells us which module to run. The name here
      # matches the name supplied to DEFINE_ART_MODULE near the end of
      # SlicerCheck_module.cc.

      module_type:             "SlicerCheck"
      SlicerAlg:               @local::standard_sliceralg

      # Pre-/post-trigger windows in microseconds. A value of -1 will
      # utilize values that are dependent on the lariat_prd database.

      V1740PreAcquisitionWindow:  -1  # 393.216
      V1740AcquisitionWindow:     -1  # 393.216
      V1740BPreAcquisitionWindow: -1  # 393.216
      V1740BAcquisitionWindow:    -1  # 393.216
      V1751PreAcquisitionWindow:  -1  # 0.64
      V1751AcquisitionWindow:     -1  # 28.672
      TDCPreAcquisitionWindow:    -1  # 1.196
      TDCAcquisitionWindow:       -1  # 1.196
    }
  }

  analysis: [ SlicerCheck ]

  end_paths: [ analysis ]  
}

services.user.SeedService: @local::random_seedservice
